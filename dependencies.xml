<project toolsVersion="6.0">
    <!-- Tools -->
    <dependency name="tools_python" linkPath="tools/python">
        <package name="python" version="3.7.9-1-${platform}" platforms="windows-x86_64" />
        <package name="python" version="3.7.9-180.74b501b5-${platform}" platforms="linux-x86_64" />
    </dependency>
    <dependency name="tools_cmake" linkPath="tools/cmake">
        <package name="cmake" version="3.22.1+nv1-${platform}" platforms="windows-x86_64 linux-x86_64" />
    </dependency>
    <dependency name="tools_ninja" linkPath="tools/ninja">
        <package name="ninja" version="1.10.2+pipeline2996563-${platform}" platforms="windows-x86_64 linux-x86_64" />
    </dependency>
    <dependency name="tools_clang-format" linkPath="tools/clang-format">
        <package name="clang-format" version="15.0.6-windows-x86_64" platforms="windows-x86_64"/>
    </dependency>
    <!-- Libraries -->
    <remote name="github-slang-windows" type="https" packageLocation="github.com/shader-slang/slang/releases/download/v${version}/slang-${version}-win64.zip"/>
    <remote name="github-slang-linux" type="https" packageLocation="github.com/shader-slang/slang/releases/download/v${version}/slang-${version}-linux-x86_64.zip"/>
    <dependency name="slang" linkPath="external/slang">
        <package name="slang" version="0.24.52" remotes="github-slang-windows" platforms="windows-x86_64"/>
        <package name="slang" version="0.24.52" remotes="github-slang-linux" platforms="linux-x86_64" />
    </dependency>
</project>
